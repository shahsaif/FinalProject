<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Time And Date For Video Call"
            android:layout_gravity="center_horizontal"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textSize="13sp"
            />
        <CalendarView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/select_date_spinner"
            android:padding="5dp"
            android:layout_marginTop="5dp"

            />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:id="@+id/select_hour_spinner"
            android:padding="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you 18+ ?"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_marginTop="5dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_marginTop="5dp"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Are you Fan of this Celebrity ?"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Write Here"
            android:textAllCaps="false"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Why this Celebrity is your favorite ?"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Write Here"
            android:textAllCaps="false"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules For VideoTime :"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There will be zero nudity or profanity being used ."
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you a user and get reported your profile will be canceled from the app ."
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are not allowed to use abusive or curse word with the celebrity . "
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you get reported the celebrity will leave a report on your VideoTime
History for other celebrity to see ."
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note. You have Max of 5 min to VideoTime the celebrity so specify your time ."
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/white_color"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>


</ScrollView>
